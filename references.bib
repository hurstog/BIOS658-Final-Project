@article{puppoMicroRNAsTheirRoles2021a,
  title = {{{MicroRNAs}} and {{Their Roles}} in {{Breast Cancer Bone Metastasis}}},
  author = {Puppo, Margherita and Valluru, Manoj K. and Cl{\'e}zardin, Philippe},
